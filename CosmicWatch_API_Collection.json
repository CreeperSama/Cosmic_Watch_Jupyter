{
	"info": {
		"_postman_id": "cosmic-watch-v1",
		"name": "Cosmic Watch Mission Control API",
		"description": "API Documentation for the Cosmic Watch Asteroid Tracking System.\n\nIncludes endpoints for:\n- User Authentication (Researcher/Enthusiast)\n- NASA NeoWs Data Proxy\n- Real-time Alert System\n- User Watchlists",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Authentication",
			"item": [
				{
					"name": "Register New Researcher",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Dr. Stone\",\n    \"email\": \"senku@science.org\",\n    \"password\": \"password123\",\n    \"role\": \"researcher\",\n    \"affiliation\": \"Kingdom of Science\"\n}"
						},
						"url": { "raw": "http://localhost:5000/auth/signup", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["auth", "signup"] }
					}
				},
				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"authToken\", jsonData.token);",
									"console.log(\"Token stored for future requests\");"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"senku@science.org\",\n    \"password\": \"password123\"\n}"
						},
						"url": { "raw": "http://localhost:5000/auth/login", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["auth", "login"] }
					}
				}
			]
		},
		{
			"name": "2. Telemetry Data",
			"item": [
				{
					"name": "Get Live Feed (Date Range)",
					"request": {
						"method": "GET",
						"header": [
							{ "key": "x-auth-token", "value": "{{authToken}}" }
						],
						"url": {
							"raw": "http://localhost:5000/nasa/asteroids?start_date=2025-01-01&end_date=2025-01-07",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["nasa", "asteroids"],
							"query": [
								{ "key": "start_date", "value": "2025-01-01" },
								{ "key": "end_date", "value": "2025-01-07" }
							]
						}
					}
				}
			]
		},
		{
			"name": "3. Alert System",
			"item": [
				{
					"name": "Fetch Active Alerts",
					"request": {
						"method": "GET",
						"header": [],
						"url": { "raw": "http://localhost:5000/notifications", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["notifications"] }
					}
				},
				{
					"name": "Mark All Read",
					"request": {
						"method": "PUT",
						"header": [],
						"url": { "raw": "http://localhost:5000/notifications/read-all", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["notifications", "read-all"] }
					}
				}
			]
		},
		{
			"name": "4. Watchlist",
			"item": [
				{
					"name": "Add to Watchlist",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" },
							{ "key": "x-auth-token", "value": "{{authToken}}" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"asteroidId\": \"3542519\",\n    \"name\": \"(2010 PK9)\",\n    \"hazardous\": true,\n    \"date\": \"2023-09-12\"\n}"
						},
						"url": { "raw": "http://localhost:5000/watchlist/add", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["watchlist", "add"] }
					}
				}
			]
		}
	]
}